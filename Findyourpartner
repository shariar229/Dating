        profile2: "এমা, ২৪",
        interest1: "✈️ ভ্রমণ প্রেমী | 💃 নৃত্যশিল্পী",
        profile3: "মিয়া, ২৯",
        interest2: "🎨 শিল্প অনুরাগী | 📚 বইপ্রেমী"
    }
};

let currentLang = localStorage.getItem('siteLang') || 'en';

function updateTranslations() {
    document.querySelectorAll('[data-translate]').forEach(el => {
        const key = el.dataset.translate;
        el.textContent = lang[currentLang][key];
    });
    document.title = lang[currentLang].headerTitle;
    document.querySelector('input[type="email"]').placeholder = lang[currentLang].emailPlaceholder;
}

function changeLanguage(langCode) {
    currentLang = langCode;
    localStorage.setItem('siteLang', langCode);
    updateTranslations();
}

// Initial Setup
document.addEventListener('DOMContentLoaded', () => {
    updateTranslations();
    
    // Set initial active state for language button
    document.querySelectorAll('.lang-btn').forEach(btn => {
        btn.style.backgroundColor = btn.textContent.toLowerCase() === currentLang ? 
            '#ff1493' : 'rgba(255, 20, 147, 0.5)';
    });
});

// Adsterra Popunder Trigger on Button Click
document.querySelectorAll('button').forEach(btn => {
    btn.addEventListener('click', () => {
        // Popunder Trigger Code
        window.open('https://www.effectiveratecpm.com/f4y5pwa3db?key=21862cd10b3ccfc483337db7892a6f1d', 
            '_blank', 'noreferrer,noopener');
    });
});
</script>
